@model DevBol.Presentation.ViewModels.ApostadorViewModel

@{
    ViewData["Title"] = "Informações de : " + Model.Usuario.Apelido;

    <script src="~/lib/jquery/dist/jquery-3.7.1.js"></script>
}

<h4 style="padding-top: 50px">@ViewData["Title"]</h4>
<hr />
<div class="row">

    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Usuario.Apelido)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Usuario.Apelido)
            </dd>
                       
                       
            <dt>
                @Html.DisplayNameFor(model => model.Usuario.CPF)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Usuario.CPF)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Usuario.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Usuario.Email)
            </dd>
           
            <dt>
                @Html.DisplayNameFor(model => model.Usuario.Celular)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Usuario.Celular)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Usuario.RegistrationDate)
            </dt>
            <dd>
                @Html.Raw(String.Format("{0:dd MMM yyyy}", Model.Usuario.RegistrationDate))
            </dd>

        </dl>

        <div>
            @* <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> *@
            <a class="btn btn-info" asp-action="Index">Voltar</a>
        </div>
    </div>
</div>