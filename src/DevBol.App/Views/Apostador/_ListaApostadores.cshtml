@model IEnumerable<DevBol.Presentation.ViewModels.ApostadorViewModel>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
        
            <th>
                @Html.DisplayNameFor(model => model.Usuario.Apelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.Celular)
            </th>
            
            <th>
                Detalhes
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Apelido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Email)                     
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Celular)
                </td>                
                
                <td class="text-right">
                    <a class="btn btn-warning" asp-controller="Apostador" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam> </a>
                    <a class="btn btn-info" asp-controller="Apostador" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam> </a>
                    <a class="btn btn-danger" asp-controller="Apostador" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> </a> 
                </td>
            </tr>
        }
    </tbody>
</table>
