@model IEnumerable<DevBol.Presentation.ViewModels.ApostadorCampeonatoViewModel>

@{

    ViewData["Title"] = "Selecionar Apostador do(a) : " + TempData["Campeonato"];

    <script src="~/lib/jquery/dist/jquery-3.7.1.js"></script>

}

<h4 style="padding-top: 30px">@ViewData["Title"] </h4>


<hr />
<hr />
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apostador.Usuario.Apelido)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Apostador.Usuario.Celular)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Apostador.Usuario.Apelido)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Apostador.Usuario.Celular)
                </td>


                <td class="text-right">
                    <a class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Simular Apostas" 
                       asp-controller="ApostadorCampeonato" 
                       asp-action="ListarApostasDoApostadorNaRodada"
                       asp-route-Id="@item.Id"><spam class="fa fa-grin-wink"></spam> </a>
                </td>

              @*   <td class="text-right">
                    <a class="btn btn-infor" data-toggle="tooltip" data-placement="top" title="Consultar Apostas"
                       asp-controller="ApostadorCampeonato"
                       asp-action="ConsultarApostasDoApostadorNaRodada"
                       asp-route-Id="@item.Id"><spam class="fa fa-grin-wink"></spam> </a>
                </td> *@
            </tr>
        }
    </tbody>
</table>
