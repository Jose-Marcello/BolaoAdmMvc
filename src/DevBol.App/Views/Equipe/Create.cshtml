@model DevBol.Presentation.ViewModels.EquipeViewModel

@{
    ViewData["Title"] = "Nova Equipe";

    <script src="~/lib/jquery/dist/jquery-3.7.1.js"></script>

}

<h3 style="padding-top: 50px">@ViewData["Title"] </h3>

<hr />
<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Create">

             @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <vc:Summary></vc:Summary>
            
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sigla" class="control-label"></label>
                <input asp-for="Sigla" class="form-control" />
                <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="UfId" class="control-label"></label>
                <select asp-for="UfId" class="form-control" asp-items="@(new SelectList(Model.Ufs, "Id", "Nome"))">
                    <option></option>
                </select>

                <span asp-validation-for="UfId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EscudoUpload" class="control-label"></label>

                <div class="input-group custom-file-button">
                    <input type="file" class="form-control" id="EscudoUpload" asp-for="EscudoUpload">
                    <label class="input-group-text" for="EscudoUpload">Escolher</label>
                </div>

                <span asp-validation-for="EscudoUpload" class="text-danger"></span>
            </div>
            
            <br />


            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label><br />
                <input type="radio" value="1" asp-for="Tipo" checked /> Time<br />
                <input type="radio" value="2" asp-for="Tipo" /> Seleção            
            </div>
            
            <br />

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

