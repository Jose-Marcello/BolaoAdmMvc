@model DevBol.Presentation.ViewModels.CampeonatoViewModel

@{
    ViewData["Title"] = "Informações do : " + Model.Nome;
}

<h4 style="padding-top: 50px">@ViewData["Title"]</h4>
<hr />
<div class="row">

    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataInic)
            </dt>
            <dd>
                @Html.Raw(String.Format("{0:dd MMM yyyy}", Model.DataInic))
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataFim)
            </dt>
            <dd>
                @Html.Raw(String.Format("{0:dd MMM yyyy}", Model.DataFim))
            </dd>
           
            <dt>
                    @Html.DisplayNameFor(model => model.NumRodadas)
            </dt>
            <dd>
                    @Html.DisplayFor(model => model.NumRodadas)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Tipo)
            </dd>
           
            <dt>
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Ativo)
            </dd>

        </dl>

        <div>
            <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-info" asp-action="Index">Voltar</a>
        </div>
    </div>
</div>