@model DevBol.Presentation.ViewModels.CampeonatoViewModel

@{
    ViewData["Title"] = "Excluir - " + Model.Nome;

    <script src="~/lib/jquery/dist/jquery-3.7.1.js"></script>

}

<h4 style="padding-top: 50px">@ViewData["Title"] </h4>

<h5>Você tem certeza disso?</h5>

<div class="row">

    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataInic)
            </dt>
            <dd>
                @Html.Raw(String.Format("{0:dd MMM yyyy}", Model.DataInic))
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataFim)
            </dt>
             <dd>
                @Html.Raw(String.Format("{0:dd MMM yyyy}", Model.DataFim))
            </dd>
            
            <dt>
                    @Html.DisplayNameFor(model => model.NumRodadas)
            </dt>
            <dd>
                    @Html.DisplayFor(model => model.NumRodadas)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Tipo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Ativo)
            </dd>

        </dl>

        <div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </form>
        </div>
    </div>
</div>
