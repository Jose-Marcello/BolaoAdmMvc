@model IEnumerable<DevBol.Presentation.ViewModels.RankingRodadaViewModel>

@{

    ViewData["Title"] = "Ranking da Rodada : " + TempData["Rodada"] + " do(a) : " + TempData["Campeonato"];
}

<h4 style="padding-top: 30px">@ViewData["Title"] </h4>


<hr />
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>

            <th>
               Apostador
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posicao)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Pontuacao)
            </th>
                       

            <th>
                @Html.DisplayNameFor(model => model.DataAtualizacao)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.ApostadorCampeonato.Apostador.Usuario.Apelido)

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Posicao)
                </td>
                
                <td>

                    @Html.DisplayFor(modelItem => item.Pontuacao)

                </td>
                                        
               
               

                <td>
                    @Html.Raw(String.Format("{0:dd MMM yyyy hh:mm}", item.DataAtualizacao))
                </td>


                @*  <td class="text-right">
            <a class="btn btn-warning" asp-controller="Jogos" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam> </a>
            <a class="btn btn-info" asp-controller="Jogos" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam> </a>
            <a class="btn btn-danger" asp-controller="Jogos" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> </a>
            </td> *@

            </tr>
        }
    </tbody>
</table>
