            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DataFim)
            </dt>
            <dd>
                @Html.Raw(String.Format("{0:dd MMM yyyy}", Model.DataFim))
            </dd>
           
            <dt>
                    @Html.DisplayNameFor(model => model.NumJogos)
            </dt>
            <dd>
                    @Html.DisplayFor(model => model.NumJogos)
            </dd>
                        
