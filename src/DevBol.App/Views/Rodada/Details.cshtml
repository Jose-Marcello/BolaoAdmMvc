@model DevBol.Presentation.ViewModels.RodadaViewModel

@{

    ViewData["Title"] = "Informações da Rodada Número : " + Model.NumeroRodada + " do Campeonato: " +Model.Campeonato.Nome;

    <script src="~/lib/jquery/dist/jquery-3.7.1.js"></script>

}

<h4 style="padding-top: 50px">@ViewData["Title"]</h4>
<hr />
<div class="row">

    <div class="col-md-6">
        <dl>
          
            <dt>
                @Html.DisplayNameFor(model => model.DataInic)
            </dt>
