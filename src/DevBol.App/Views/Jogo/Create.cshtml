@model DevBol.Presentation.ViewModels.JogoViewModel

@{
    ViewData["Title"] = "Novo Jogo da Rodada : " + Model.Rodada.NumeroRodada
                                                + " do(a):  " + Model.Rodada.Campeonato.Nome;

    <script src="~/lib/jquery/dist/jquery-3.7.1.js"></script>
}

<h3 style="padding-top: 20px">
    @ViewData["Title"]
</h3>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" method="post" asp-route-RodadaId="@Model.RodadaId">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="RodadaId" />

            <div class="form-group">
                <label asp-for="DataJogo" class="control-label"></label>
                <input asp-for="DataJogo" class="form-control" />
                <span asp-validation-for="DataJogo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HoraJogo" class="control-label"></label>
                <input asp-for="HoraJogo" class="form-control" />
                <span asp-validation-for="HoraJogo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EstadioId" class="control-label"></label>
                <select asp-for="EstadioId" class="form-control" asp-items="@(new SelectList(Model.Estadios, "Id", "Nome"))">
                    <option></option>
                </select>
                <span asp-validation-for="EstadioId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="EquipeCasaId" class="control-label"></label>
                <select asp-for="EquipeCasaId" class="form-control" asp-items="@(new SelectList(Model.EquipesCampeonato, "Id", "Equipe.Nome"))">
                    <option></option>
                </select>
                <span asp-validation-for="EquipeCasaId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="EquipeVisitanteId" class="control-label"></label>
                <select asp-for="EquipeVisitanteId" class="form-control" asp-items="@(new SelectList(Model.EquipesCampeonato, "Id", "Equipe.Nome"))">
                    <option></option>
                </select>
                <span asp-validation-for="EquipeVisitanteId" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Incluir" class="btn btn-primary" />
                <a asp-action="ManterJogos" asp-route-id="@Model.RodadaId" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}