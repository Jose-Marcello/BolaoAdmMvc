<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse">

                    <div class="dropdown" style="margin-right:15px">

                        <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Home
                        </button>

                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item" type="button">Home</button></li>
                            <a id="Id" asp-controller="Home" asp-action="Index"> Home </a>
                        </ul>

                    </div>

                    <div class="dropdown" style="margin-right:15px">

                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Cadastros <span class="caret"></span>
                        </button>                                              

                        <ul class="dropdown-menu">   

                            <li>
                                <button type="button" class="dropdown-item btn btn-success">
                                    <a id="Id" asp-controller="Campeonato" asp-action="Index"> Campeonatos  </a>
                                </button>
                            </li>

                            <li>
                                <button class="dropdown-item" type="button">
                                   <a asp-area="" id="Id" asp-controller="Equipe" asp-action="Index"> Equipes  </a>
                                </button>
                            </li>

                            <li>
                                <button class="dropdown-item" type="button">
                                    <a asp-area="" id="Id" asp-controller="Estadio" asp-action="Index"> Estádios </a>
                                </button>
                            </li>

                            <li>
                                <button class="dropdown-item" type="button">
                                    <a asp-area="" id="Id" asp-controller="Apostador" asp-action="Index"> Apostadores </a>
                                </button>
                            </li>

                            <li>
                                <button class="dropdown-item" type="button">
                                    <a asp-area="" id="Id" asp-controller="Uf" asp-action="Index"> Ufs </a>
                                </button>
                            </li>
                            
                           


                        </ul>
                    </div>

                    <div class="dropdown" style="margin-right:15px">

                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Controle
                        </button>

                        <ul class="dropdown-menu">

                            <li>
                                <button class="dropdown-item" type="button">
                                    <a asp-area="" id="" asp-controller="Campeonato"
                                       asp-action="ListarCampeonatosAtivos"> Gerenciar Campeonatos</a>
                                </button>
                            </li>

                            <li>
                                <button class="dropdown-item" type="button">
                                    <a asp-area="" id="" asp-controller="Rodada"
                                       asp-action="GerenciarRodadas"> Manter Rodadas </a>
                                </button>
                            </li>

                            <li>
                                <button class="dropdown-item" type="button">
                                    <a asp-area="" id="" asp-controller="Rodada"
                                       asp-action="ListarRodadasEmConstrucao"> Selecionar Rodada para Manter Jogos </a>

                                </button>
                            </li>


                            <li>
                                <button class="dropdown-item" type="button">
                                    <a asp-area="" id="" asp-controller="LancarPlacar"
                                       asp-action="LancarPlacaresDaRodada">Atualizar Resultados</a>

                                </button>
                            </li>

                            <li>
                                <button class="dropdown-item" type="button">
                                    <a asp-area="" id="" asp-controller="Rodada"
                                       asp-action="ListarRodadas"> Gerenciar Apostas </a>
                                </button>
                            </li>

                            <li>
                                <button class="dropdown-item" type="button">
                                    <a asp-area="" id="" asp-controller="ApostadorCampeonato"
                                       asp-action="SelecionarApostadorParaSimularAposta"> Simulação e Consulta de Apostas</a>
                                </button>
                            </li>

                        </ul>
                    </div>

                </div>
            </div>

        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            App Bolão - Módulo Administrativo
        </div>
    </footer>

